{
  "name": "split-my-bill",
  "license": "MIT",
  "version": "0.2.3",
  "private": true,
  "scripts": {
    "dev": "vite --open",
    "build": "tsc && vite build",
    "type-check": "tsc --pretty --noEmit",
    "serve": "vite preview",
    "serve:test": "start-server-and-test 'pnpm serve' http://localhost:5000/split-my-bill/",
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "husky install",
    "format": "prettier -uw --ignore-path .gitignore .",
    "run-eslint": "eslint --cache --fix --ignore-path .gitignore --ext .ts,.tsx src",
    "run-stylelint": "stylelint --cache --fix --ignore-path .gitignore '**/*.css'",
    "lint": "npm-run-all --parallel type-check run-stylelint run-eslint",
    "validate": "pnpm lint && pnpm build --mode test && pnpm test:headless",
    "release": "release-it"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=6"
  },
  "dependencies": {
    "byte-base64": "^1.1.0",
    "formik": "^2.2.9",
    "just-throttle": "4.0.1",
    "pako": "^2.0.4",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@nabla/vite-plugin-eslint": "1.4.0",
    "@release-it/conventional-changelog": "4.2.2",
    "@types/pako": "1.0.3",
    "@types/react": "17.0.40",
    "@types/react-dom": "17.0.13",
    "@typescript-eslint/eslint-plugin": "5.18.0",
    "@typescript-eslint/parser": "5.14.0",
    "@vitejs/plugin-react": "1.2.0",
    "autoprefixer": "10.4.2",
    "eslint": "8.10.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "16.1.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "7.29.3",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-react-prefer-function-component": "1.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unicorn": "41.0.0",
    "gh-pages": "^3.2.3",
    "husky": "7.0.4",
    "lint-staged": "12.3.5",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.8",
    "prettier": "2.5.1",
    "release-it": "^14.11.6",
    "rollup": "2.70.0",
    "stylelint": "14.5.3",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "25.0.0",
    "tailwindcss": "3.0.23",
    "typescript": "4.6.2",
    "vite": "2.8.6",
    "vite-plugin-pwa": "0.11.13",
    "vite-tsconfig-paths": "3.4.1",
    "workbox-build": "6.5.1",
    "workbox-window": "6.5.1"
  },
  "lint-staged": {
    "*.css": "stylelint --cache --fix",
    "*.{ts,tsx}": "eslint --cache --fix"
  },
  "browserslist": {
    "production": "Edge >= 18, Firefox >= 60, Chrome >= 61, Safari >= 11, Opera >= 48",
    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ]
  }
}
