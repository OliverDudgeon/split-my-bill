{
  "name": "split-my-bill",
  "license": "MIT",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "vite --open",
    "test": "pnpm serve:test 'cypress open'",
    "test:headless": "pnpm serve:test 'cypress run'",
    "build": "tsc && vite build",
    "type-check": "tsc --pretty --noEmit",
    "serve": "vite preview",
    "serve:test": "start-server-and-test 'pnpm serve' http://localhost:5000/split-my-bill/",
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "husky install",
    "format": "prettier -uw --ignore-path .gitignore .",
    "run-eslint": "eslint --cache --fix --ignore-path .gitignore --ext .ts,.tsx src",
    "run-stylelint": "stylelint --cache --fix --ignore-path .gitignore '**/*.css'",
    "lint": "npm-run-all --parallel type-check run-stylelint run-eslint",
    "validate": "pnpm lint && pnpm build --mode test && pnpm test:headless",
    "release": "release-it"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=6"
  },
  "dependencies": {
    "byte-base64": "^1.1.0",
    "formik": "^2.2.9",
    "just-throttle": "^3.0.0",
    "pako": "^2.0.4",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@cypress/code-coverage": "3.9.11",
    "@nabla/vite-plugin-eslint": "^1.3.2",
    "@release-it/conventional-changelog": "^3.3.0",
    "@types/pako": "^1.0.2",
    "@types/react": "17.0.33",
    "@types/react-dom": "17.0.10",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "@vitejs/plugin-react": "^1.0.7",
    "autoprefixer": "10.4.0",
    "cypress": "8.7.0",
    "eslint": "8.4.1",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-airbnb-typescript": "14.0.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "7.26.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-react-prefer-function-component": "0.0.7",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unicorn": "37.0.1",
    "gh-pages": "^3.2.3",
    "husky": "7.0.4",
    "lint-staged": "11.2.6",
    "npm-run-all": "4.1.5",
    "postcss": "8.3.11",
    "prettier": "2.4.1",
    "release-it": "^14.11.6",
    "rollup": "2.58.3",
    "rollup-plugin-istanbul": "3.0.0",
    "start-server-and-test": "1.14.0",
    "stylelint": "14.0.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "23.0.0",
    "tailwindcss": "2.2.19",
    "typescript": "4.4.4",
    "vite": "2.6.13",
    "vite-plugin-pwa": "0.11.3",
    "vite-tsconfig-paths": "3.3.17",
    "workbox-build": "6.3.0",
    "workbox-window": "6.3.0"
  },
  "lint-staged": {
    "*.css": "stylelint --cache --fix",
    "*": "prettier -uw",
    "*.{js,ts,tsx}": "eslint --cache --fix"
  },
  "browserslist": {
    "production": "Edge >= 18, Firefox >= 60, Chrome >= 61, Safari >= 11, Opera >= 48",
    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ]
  }
}
