{
  "css.validate": false,
  "editor.codeActionsOnSave": [
    "source.addMissingImports",
    "source.fixAll",
    "source.organizeImports"
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/.eslintcache": true,
    "**/.vscode": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/yarn.lock": true
  },
  "git.enableCommitSigning": true,
  "stylelint.validate": [
    "css"
  ],
  "typescript.tsdk": "node_modules/typescript/lib",
  "conventionalCommits.scopes": [
    "actions",
    "editor",
    "vite",
    "tailwind",
    "eslint",
    "layout",
    "ui/inputs",
    "app",
    "query-params",
    "url-state",
    "totals",
    "initials",
    "discounts",
    "share-button",
    "footer",
    "currency-format",
    "receipt",
    "deps"
  ],
}
